    <div class="container">
        <div class="header">
            <h1>Mi Blog Personal</h1>
            <p class="subtitle">Compartiendo mis pensamientos y momentos especiales</p>
        </div>
        
        <div class="controls">
            <button class="btn btn-admin" onclick="checkAdmin()">üîê Comprobar Admin</button>
            <button class="btn btn-new" id="newPostBtn" onclick="showNewPostModal()">üìù Nueva Publicaci√≥n</button>
            <div class="admin-status" id="adminStatus">
                ‚úÖ Modo Administrador Activo
            </div>
        </div>
        
        <div class="posts-container" id="postsContainer">
            <div class="empty-state">
                <h3>¬°Bienvenido a mi blog! üòä</h3>
                <p>Aqu√≠ compartir√© mis ideas, experiencias y momentos especiales.</p>
                <p>¬°Pronto habr√° contenido nuevo!</p>
            </div>
        </div>
    </div>

    <!-- Admin Password Modal -->
    <div id="adminModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeAdminModal()">&times;</span>
            <div class="modal-header">
                <h2>üîê Acceso de Administrador</h2>
                <p>Introduce la contrase√±a para acceder al modo edici√≥n</p>
            </div>
            <div class="form-group">
                <label for="adminPassword">Contrase√±a:</label>
                <input type="password" id="adminPassword" placeholder="Escribe la contrase√±a...">
            </div>
            <div class="modal-buttons">
                <button class="btn btn-submit" onclick="verifyAdmin()">üîì Acceder</button>
                <button class="btn btn-cancel" onclick="closeAdminModal()">‚ùå Cancelar</button>
            </div>
        </div>
    </div>

    <!-- New Post Modal -->
    <div id="newPostModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeNewPostModal()">&times;</span>
            <div class="modal-header">
                <h2>üìù Nueva Publicaci√≥n</h2>
                <p>Crea una nueva entrada para tu blog</p>
            </div>
            <form id="newPostForm">
                <div class="form-group">
                    <label for="postTitle">T√≠tulo:</label>
                    <input type="text" id="postTitle" placeholder="Escribe el t√≠tulo de tu publicaci√≥n..." required>
                </div>
                <div class="form-group">
                    <label for="postImage">Imagen:</label>
                    <input type="file" id="postImage" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="postText">Contenido:</label>
                    <textarea id="postText" placeholder="Escribe el contenido de tu publicaci√≥n..." required></textarea>
                </div>
                <div class="modal-buttons">
                    <button type="button" class="btn btn-submit" onclick="publishPost()">üöÄ Publicar</button>
                    <button type="button" class="btn btn-cancel" onclick="closeNewPostModal()">‚ùå Cancelar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Image Modal -->
    <div id="imageModal" class="image-modal">
        <span class="image-close" onclick="closeImageModal()">&times;</span>
        <img class="image-modal-content" id="modalImage">
    </div>

    <script>
        let isAdmin = false;
        let posts = [];

        // Load posts from localStorage on page load
        function loadPosts() {
            try {
                const savedPosts = localStorage.getItem('blogPosts');
                posts = savedPosts ? JSON.parse(savedPosts) : [];
            } catch (error) {
                posts = [];
            }
        }

        // Save posts to localStorage
        function savePosts() {
            try {
                localStorage.setItem('blogPosts', JSON.stringify(posts));
            } catch (error) {
                // Fallback to memory if localStorage fails
                window.blogPosts = posts;
            }
        }

        // Admin Functions
        function checkAdmin() {
            document.getElementById('adminModal').style.display = 'block';
            document.getElementById('adminPassword').focus();
        }

        function closeAdminModal() {
            document.getElementById('adminModal').style.display = 'none';
            document.getElementById('adminPassword').value = '';
        }

        function verifyAdmin() {
            const password = document.getElementById('adminPassword').value;
            if (password === 'oriente14') {
                isAdmin = true;
                document.getElementById('newPostBtn').classList.add('visible');
                document.getElementById('adminStatus').classList.add('visible');
                closeAdminModal();
                updatePostsDisplay();
                
                // Success animation
                const adminStatus = document.getElementById('adminStatus');
                adminStatus.style.animation = 'bounce 0.6s ease-out';
                
                alert('üéâ ¬°Acceso concedido! Ahora puedes crear y eliminar publicaciones.');
            } else {
                alert('‚ùå Contrase√±a incorrecta. Int√©ntalo de nuevo.');
                document.getElementById('adminPassword').value = '';
                document.getElementById('adminPassword').focus();
            }
        }

        // New Post Functions
        function showNewPostModal() {
            document.getElementById('newPostModal').style.display = 'block';
            document.getElementById('postTitle').focus();
        }

        function closeNewPostModal() {
            document.getElementById('newPostModal').style.display = 'none';
            document.getElementById('newPostForm').reset();
        }

        // New simplified publish function
        function publishPost() {
            // Get form values
            const title = document.getElementById('postTitle').value.trim();
            const text = document.getElementById('postText').value.trim();
            const imageFile = document.getElementById('postImage').files[0];
            
            // Validate fields
            if (!title) {
                alert('‚ö†Ô∏è Por favor, escribe un t√≠tulo.');
                document.getElementById('postTitle').focus();
                return;
            }
            
            if (!text) {
                alert('‚ö†Ô∏è Por favor, escribe el contenido.');
                document.getElementById('postText').focus();
                return;
            }
            
            if (!imageFile) {
                alert('‚ö†Ô∏è Por favor, selecciona una imagen.');
                document.getElementById('postImage').focus();
                return;
            }
            
            // Show processing message
            const publishBtn = document.querySelector('.btn-submit');
            publishBtn.innerHTML = '‚è≥ Publicando...';
            publishBtn.disabled = true;
            
            // Read the image file
            const reader = new FileReader();
            reader.onload = function(e) {
                // Create new post object
                const newPost = {
                    id: Date.now(),
                    title: title,
                    text: text,
                    image: e.target.result,
                    date: new Date().toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    })
                };
                
                // Add to posts array at the beginning
                posts.unshift(newPost);
                
                // Save posts
                savePosts();
                
                // Update display
                updatePostsDisplay();
                
                // Reset form and close modal
                document.getElementById('newPostForm').reset();
                closeNewPostModal();
                
                // Reset button
                publishBtn.innerHTML = 'üöÄ Publicar';
                publishBtn.disabled = false;
                
                // Show success message
                alert('üéâ ¬°Publicaci√≥n creada exitosamente! Ya es visible para todos los visitantes.');
            };
            
            reader.onerror = function() {
                alert('‚ùå Error al procesar la imagen. Int√©ntalo con otra imagen.');
                publishBtn.innerHTML = 'üöÄ Publicar';
                publishBtn.disabled = false;
            };
            
            // Start reading the file
            reader.readAsDataURL(imageFile);
        }

        // Delete post function
        function deletePost(postId) {
            if (confirm('üóëÔ∏è ¬øEst√°s seguro de que quieres eliminar esta publicaci√≥n?')) {
                posts = posts.filter(post => post.id !== postId);
                savePosts(); // Save to localStorage after deletion
                updatePostsDisplay();
                alert('‚úÖ Publicaci√≥n eliminada exitosamente.');
            }
        }

        // Update posts display
        function updatePostsDisplay() {
            const container = document.getElementById('postsContainer');
            
            if (posts.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <h3>¬°Bienvenido a mi blog! üòä</h3>
                        <p>Aqu√≠ compartir√© mis ideas, experiencias y momentos especiales.</p>
                        <p>¬°Pronto habr√° contenido nuevo!</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = posts.map(post => `
                <div class="post">
                    <img src="${post.image}" alt="${post.title}" class="post-image" onclick="showImage('${post.image}')">
                    <div class="post-content">
                        <h3 class="post-title">${post.title}</h3>
                        <p class="post-text">${post.text}</p>
                        <p class="post-date">üìÖ ${post.date}</p>
                        <button class="delete-btn ${isAdmin ? 'visible' : ''}" onclick="deletePost(${post.id})">
                            üóëÔ∏è Eliminar
                        </button>
                    </div>
                </div>
            `).join('');
        }

        // Image modal functions
        function showImage(imageSrc) {
            document.getElementById('modalImage').src = imageSrc;
            document.getElementById('imageModal').style.display = 'block';
        }

        function closeImageModal() {
            document.getElementById('imageModal').style.display = 'none';
        }

        // Close modals when clicking outside
        window.onclick = function(event) {
            const adminModal = document.getElementById('adminModal');
            const newPostModal = document.getElementById('newPostModal');
            const imageModal = document.getElementById('imageModal');
            
            if (event.target === adminModal) {
                closeAdminModal();
            }
            if (event.target === newPostModal) {
                closeNewPostModal();
            }
            if (event.target === imageModal) {
                closeImageModal();
            }
        }

        // Handle Enter key in admin password field
        document.getElementById('adminPassword').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                verifyAdmin();
            }
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadPosts(); // Load existing posts first
            updatePostsDisplay();
        });
    </script>
</body>
</html>
